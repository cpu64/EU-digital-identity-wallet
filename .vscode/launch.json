{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug wallet frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src/wallet/frontend"
    },
    {
      "name": "Debug wallet backend",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src/wallet/backend",
          "remoteRoot": "/app/backend"
        }
      ],
      "subProcess": true
    }
  ],
  "compounds": [
    {
      "name": "Debug wallet",
      "configurations": ["Debug wallet backend", "Debug wallet frontend"]
    }
  ]
}
